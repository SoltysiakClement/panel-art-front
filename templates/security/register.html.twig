{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-container">  <!-- Assure l'utilisation de la même classe container que la connexion -->
    <div class="login-box">
        <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
        <form method="post">
            {{ form_start(registrationForm) }}

            <div class="form-group">
                {{ form_row(registrationForm.email, {
                    'label': 'Adresse email',
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.password, {
                    'label': 'Mot de passe',
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-lg btn-primary btn-block">  <!-- Assure que les classes des boutons sont identiques -->
                    S'inscrire
                </button>
            </div>

            <p class="mt-3 mb-0 text-center">
                Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
            </p>

            {{ form_end(registrationForm) }}
        </form>
    </div>
</div>
{% endblock %}
