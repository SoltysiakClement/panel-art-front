{% extends 'base.html.twig' %}

{% block title %}Ajouter un tableau
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/gallery/addArtwork.css') }}">
{% endblock %}

{% block body %}
	{% include '_navbar.html.twig' %}

	<div class="container">
		<h1>Ajouter une nouvelle œuvre</h1>

		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-8">
				<div class="form-group">
					{{ form_row(form.title) }}
				</div>
				<div class="form-group">
					{{ form_row(form.method) }}
				</div>
				<div class="row">
					<div class="col-md-6">
						{{ form_row(form.height) }}
					</div>
					<div class="col-md-6">
						{{ form_row(form.width) }}
					</div>
				</div>
				<div class="form-group">
					{{ form_row(form.createdAt) }}
				</div>
				<div class="form-group">
					{{ form_row(form.description) }}
				</div>
				<div class="form-group">
					{{ form_row(form.quantity) }}
				</div>
				<div class="form-group">
					{{ form_row(form.prize) }}
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group file-upload">
					{# {{ form_row(form.image) }} #}
					<p>Importer un fichier ou déposer le ici</p>
				</div>
			</div>
		</div>
		<div class="form-group text-right">
			<button type="button" class="btn btn-default">Annuler</button>
			<button type="submit" class="btn btn-primary">Valider</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
