{% extends 'base.html.twig' %}

{% block title %}Ajouter un tableau
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/gallery/addArtwork.css') }}">
{% endblock %}

{% block body %}
	{% include '_navbar.html.twig' %}

	<div class="container">
		<div class="title">Ajouter un tableau</div>

		{{ form_start(form, {'attr': {'class': 'form-artwork-add'}}) }}
		<div class="form-input">
			<div class="input-label">
				<div class="input-top">
					{{ form_row(form.title, {
					'label': 'Titre',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: Pink Light'}
				}) }}

					{{ form_row(form.method, {
					'label': 'Méthode',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: Encre'}
				}) }}

					{{ form_row(form.height, {
							'label': 'Longueur',
							'attr': {'class': 'form-control', 'placeholder': 'Exemple: 90'}
						}) }}
					{{ form_row(form.width, {
							'label': 'Largeur',
							'attr': {'class': 'form-control', 'placeholder': 'Exemple: 60'}
						}) }}
				</div>

				{{ form_row(form.createdAt, {
					'label': 'Date de création',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: 11/2022'}
				}) }}

				{{ form_row(form.description, {
					'label': 'Description',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: Lorem ipsum'}
				}) }}

				{{ form_row(form.quantity, {
					'label': 'Quantité',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: 30'}
				}) }}

				{{ form_row(form.prize, {
					'label': 'Prix',
					'attr': {'class': 'form-control', 'placeholder': 'Exemple: 30'}
				}) }}
			</div>

			<div class="form-group file-upload">
				<img src="{{ asset('icons/document-upload.png') }}">
				<p>Importer un fichier ou déposer le ici</p>
				{# {{ form_row(form.image) }} #}

				<button type="button" class="btn btn-primary import">
					<img src="{{ asset('icons/add-circle.png') }}">
					<div>Importer un fichier</div>
				</button>
			</div>
		</div>

		<div class="form-group text-right">
			<button type="button" class="btn btn-default">Annuler</button>
			<button type="submit" class="btn btn-primary">Valider</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
